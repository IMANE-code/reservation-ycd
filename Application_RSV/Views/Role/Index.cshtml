@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>
@{
    ViewData["Title"] = "Index";
}

<h1>List of Roles</h1>

<div class="form-group">
    <span class="text-info">Add new Role</span>
    <a class="btn btn-primary" asp-action="Create">Add</a>
</div>
@foreach (var role in Model)
{
    <div class="card mb-3">
        <div class="card-header">
            Role Id : @role.Id
        </div>
        <div class="card-body">
            <h5 class="card-title">@role.Name</h5>
        </div>
        <div class="card-footer">
            <form method="post" asp-route-id="@role.Id" asp-action="DeleteRole">
                <a class="btn btn-success" asp-controller="Role" asp-action="Edite" asp-route-id="@role.Id">Edit</a>

                <span id="confirmDeleteSpan_@role.Id" style="display:none;">
                    <span>Are You sure want to delet this role ?</span>
                    <button type="submit" class="btn btn-danger">Yes</button>
                    <a href="#" class="btn btn-primary" onclick="ConfirmDelete('@role.Id', false)">No</a>
                </span>
                <span id="deleteSpan_@role.Id">
                    <button type="submit" class="btn btn-danger" onclick="ConfirmDelete('@role.Id', true)">Delete</button>
                </span>
            </form>
        </div>
    </div>
}
